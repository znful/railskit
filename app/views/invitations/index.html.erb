<% content_for :title, "Invitations" %>

<% content_for :page_title do %>
  <h1 class="mb-0">Invitations</h1>
<% end %>

<% content_for :page_subtitle do %>
  <span>Active outgoing invitations</span>
<% end %>

<% content_for :page_actions do %>
  <%= link_to new_account_invitation_path, class: "btn btn-primary" do %>
    <span class="ti ti-plus me-2"></span>
    <span>New invitation</span>
  <% end %>
<% end %>

<div id="invitations">
  <%= render "invitations_table", invitations: @invitations %>
</div>
