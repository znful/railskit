<%= @account.name %>

<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.username %></td>
        <td><%= account_user(@account, member).role.titleize %></td>
      </tr>
    <% end %>
  </tbody>
</table>
